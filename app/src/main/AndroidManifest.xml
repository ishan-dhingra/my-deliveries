<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anythingintellect.mydeliveries">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".MyDeliveriesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity android:name=".view.DeliveryDetailActivity" android:parentActivityName=".view.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                  android:value=".view.MainActivity"/>
        </activity>
    </application>

</manifest>